{
  "name": "njohar",
  "description": "Another e-commerce platform project built with React",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Budi Adiono",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon",
    "build:server": "rm -rf dist && webpack --env.production --config build/webpack.config.js && node build/packager.js",
    "build:client": "rm -rf src/views/.next && cross-env NODE_ENV=production next build src/views",
    "build": "npm run build:server && npm run build:client && mv src/views/.next dist",
    "lint": "tslint -c tslint.json -p ./ -e '**/*.js'"
  },
  "dependencies": {
    "antd": "^3.2.3",
    "apollo-client": "^2.2.7",
    "apollo-client-preset": "^1.0.8",
    "apollo-errors": "^1.7.1",
    "apollo-link-error": "^1.0.7",
    "apollo-server-koa": "^1.3.2",
    "crypto": "^1.0.1",
    "dotenv": "^5.0.1",
    "graphql": "^0.13.1",
    "graphql-tag": "^2.8.0",
    "hasha": "^3.0.0",
    "intl-messageformat": "^2.2.0",
    "isomorphic-unfetch": "^2.0.0",
    "jsonwebtoken": "^8.2.0",
    "jwt-decode": "^2.2.0",
    "koa": "^2.0.1",
    "koa-bodyparser": "^4.2.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.1.0",
    "koa-static": "^4.0.2",
    "mongoose": "^5.0.9",
    "next": "^5.0.0",
    "next-redux-wrapper": "^1.3.5",
    "nprogress": "^0.2.0",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/graphql": "^0.12.4",
    "@types/hasha": "^3.0.0",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/jwt-decode": "^2.2.1",
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-router": "^7.0.27",
    "@types/koa-static": "^4.0.0",
    "@types/mongoose": "^5.0.7",
    "@types/next": "^2.4.8",
    "@types/next-redux-wrapper": "^1.3.7",
    "@types/nprogress": "^0.0.29",
    "@types/react-intl": "^2.3.5",
    "@types/react-redux": "^5.0.15",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/shortid": "^0.0.29",
    "@zeit/next-css": "^0.1.4",
    "@zeit/next-less": "^0.1.1",
    "@zeit/next-typescript": "^0.0.10",
    "cross-env": "^5.1.4",
    "less": "2.7.2",
    "nodemon": "^1.17.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "nodemonConfig": {
    "ext": "ts tsx",
    "exec": "ts-node ./src/index.ts",
    "ignore": [
      "src/views"
    ],
    "verbose": true,
    "watch": [
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": false
  }
}
